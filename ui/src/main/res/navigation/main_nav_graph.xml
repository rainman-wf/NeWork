<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/home">

    <fragment
        android:id="@+id/home"
        android:name="ru.rainman.ui.PagerFragment"
        android:label="Home"
        tools:layout="@layout/fragment_pager" >
        <argument
            android:name="intention"
            app:argType="ru.rainman.ui.helperutils.Args"
            android:defaultValue="PUBLICATIONS" />
    </fragment>
    <fragment
        android:id="@+id/users"
        android:name="ru.rainman.ui.PagerFragment"
        android:label="Users"
        tools:layout="@layout/fragment_pager" >
        <argument
            android:name="intention"
            app:argType="ru.rainman.ui.helperutils.Args"
            android:defaultValue="USERS" />
    </fragment>
    <fragment
        android:id="@+id/account"
        android:name="ru.rainman.ui.UserInfoFragment"
        android:label="Account"
        tools:layout="@layout/fragment_user_info" />
    <fragment
        android:id="@+id/wall"
        android:name="ru.rainman.ui.PostsFragment"
        android:label="Wall"
        tools:layout="@layout/fragment_posts" />


</navigation>